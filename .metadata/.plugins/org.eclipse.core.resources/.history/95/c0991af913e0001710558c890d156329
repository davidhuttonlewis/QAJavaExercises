
public class Task1 {
	char letter;
	String doubleLetter;

	public String doubleLetter(String word) {

		for (int i = 0; i < word.length(); i++) {

			// System.out.print(this.letter = word.charAt(i));
			// System.out.print(this.letter = word.charAt(i));

			doubleLetter += this.letter = word.charAt(i);
			doubleLetter += this.letter = word.charAt(i);
		}
		return doubleLetter;

	}
}
